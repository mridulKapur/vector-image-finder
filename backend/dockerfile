# Stage 1: Builder - Install dependencies and cache
FROM python:3.11-slim as builder
RUN apt-get update && apt-get install -y \
    git \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install application dependencies
COPY ./requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Stage 2: Production - Create a minimal runtime image
# Use a non-root user (e.g., 'appuser') for enhanced security
FROM python:3.11-slim

WORKDIR /app

# Create a non-root user and group
RUN groupadd -r appgroup && useradd -r -g appgroup -s /bin/false appuser

# Copy only the necessary installed packages and application code from the builder stage
COPY --from=builder /app /app

# Set the user to run the container
USER appuser

# Define the command to run the Uvicorn server
# Use array syntax (exec form) for CMD/ENTRYPOINT best practice
# For production, consider using gunicorn to manage uvicorn workers for better performance/scalability
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "80"]
